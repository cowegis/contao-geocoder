<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="cowegis_geocoder_playground"
           path="/cowegis/geocoder/playground"
           controller="Cowegis\ContaoGeocoder\Action\BackendPlaygroundAction"
           methods="GET|POST">
        <default key="_scope">backend</default>
    </route>

    <route id="cowegis_geocoder_search"
           path="/cowegis/geocoder/search"
           controller="Cowegis\ContaoGeocoder\Action\SearchAction"
           methods="GET">
        <default key="_scope">frontend</default>
    </route>
</routes>
